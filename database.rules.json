{
  "rules": {
      "users": {
        "$uid": {
            ".read": "$uid !== null && $uid === auth.uid",
            ".write": "$uid !== null && $uid === auth.uid",
            "firstName": { 
                ".validate": "newData.exists() && newData.isString()"
            },
            "lastName": {
                ".validate": "newData.exists() && newData.isString()"
            },
            "degree": {
                ".validate": "newData.exists() && newData.isString()"
            },
            "terms": {
                ".validate": "newData.exists() && newData.isBoolean()"
            },
            "submittedTicket": {
                ".validate": "newData.exists() && newData.isBoolean() && !data.exists()"
            },
            "hasTicket": {
                ".write": "false"
            },
            "ticketNumber": {
                ".write": "false"
            },
            "timestamp": {
                ".validate": "!data.exists() && newData.val() <= now"
            }
        }
      }
  }
}
