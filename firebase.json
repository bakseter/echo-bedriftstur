{
  "hosting": [
    {
      "target": "app",
      "public": "public",
      "ignore": [
        "**/.*",
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "auth",
      "public": "public",
      "ignore": [
        "**/.*",
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
